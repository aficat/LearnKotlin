<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              tools:context=".ActivityLogical">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/bottomBar"
            android:layout_alignParentBottom="true">

        <android.support.design.widget.BottomNavigationView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/bottomNavView_Bar"
                android:background="@color/lightgray"
                app:menu="@menu/bottom_navigation_menu">

        </android.support.design.widget.BottomNavigationView>
    </RelativeLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.v7.widget.CardView
                android:id="@+id/sub1"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_margin="10dp"
                android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/intro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="@string/intro"
                        android:textSize="14sp" />


                <TableLayout
                        android:id="@+id/table"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="20dp"
                        android:stretchColumns="*">

                    <TableRow
                            android:id="@+id/tableRow1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#B4E2C0">

                        <TextView
                                android:id="@+id/textView1"
                                android:padding="5dp"
                                android:text="@string/operator"
                                android:textAlignment="center"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        <LinearLayout
                                android:layout_width="1dp"
                                android:layout_height="match_parent">

                            <View style="@style/Divider" />
                        </LinearLayout>

                        <TextView
                                android:id="@+id/textView2"
                                android:padding="5dp"
                                android:text="@string/descrpt"
                                android:textAlignment="center"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        <LinearLayout
                                android:layout_width="1dp"
                                android:layout_height="match_parent">

                            <View style="@style/Divider" />
                        </LinearLayout>

                        <TextView
                                android:id="@+id/textView3"
                                android:padding="5dp"
                                android:paddingBottom="10dp"
                                android:text="@string/expression"
                                android:textAlignment="center"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                    </TableRow>

                    <TableRow
                            android:id="@+id/tableRow2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#E6F5EA">

                        <TextView
                                android:id="@+id/textView5"
                                android:padding="5dp"
                                android:text="@string/and"
                                android:textAlignment="center"
                                android:textSize="14sp" />

                        <LinearLayout
                                android:layout_width="1dp"
                                android:layout_height="match_parent">

                            <View style="@style/Divider" />
                        </LinearLayout>

                        <TextView
                                android:id="@+id/textView6"
                                android:padding="5dp"
                                android:text="@string/allExpTrue"
                                android:textAlignment="center"
                                android:textSize="14sp" />

                        <LinearLayout
                                android:layout_width="1dp"
                                android:layout_height="match_parent">

                            <View style="@style/Divider" />
                        </LinearLayout>

                        <TextView
                                android:id="@+id/textView7"
                                android:padding="5dp"
                                android:paddingBottom="10dp"
                                android:text="@string/aGreaterbAmpaGreaterc"
                                android:textAlignment="center"
                                android:textSize="14sp" />


                    </TableRow>


                    <TableRow
                            android:id="@+id/tableRow3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#D1FFDD">

                        <TextView
                                android:id="@+id/textView9"
                                android:padding="5dp"
                                android:text="@string/or"
                                android:textAlignment="center"
                                android:textSize="14sp" />

                        <LinearLayout
                                android:layout_width="1dp"
                                android:layout_height="match_parent">

                            <View style="@style/Divider" />
                        </LinearLayout>

                        <TextView
                                android:id="@+id/textView10"
                                android:padding="5dp"
                                android:text="@string/anyExpTrue"
                                android:textAlignment="center"
                                android:textSize="14sp" />

                        <LinearLayout
                                android:layout_width="1dp"
                                android:layout_height="match_parent">

                            <View style="@style/Divider" />
                        </LinearLayout>

                        <TextView
                                android:id="@+id/textView11"
                                android:padding="5dp"
                                android:paddingBottom="10dp"
                                android:text="@string/orExample1"
                                android:textAlignment="center"
                                android:textSize="14sp" />


                    </TableRow>


                    <TableRow
                            android:id="@+id/tableRow4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#E6F5EA">

                        <TextView
                                android:id="@+id/textView13"
                                android:padding="5dp"
                                android:text="@string/complement"
                                android:textAlignment="center"
                                android:textSize="14sp" />

                        <LinearLayout
                                android:layout_width="1dp"
                                android:layout_height="match_parent">

                            <View style="@style/Divider" />
                        </LinearLayout>

                        <TextView
                                android:id="@+id/textView14"
                                android:padding="5dp"
                                android:text="@string/complementExpression"
                                android:textAlignment="center"
                                android:textSize="14sp" />

                        <LinearLayout
                                android:layout_width="1dp"
                                android:layout_height="match_parent">

                            <View style="@style/Divider" />
                        </LinearLayout>

                        <TextView
                                android:id="@+id/textView15"
                                android:padding="5dp"
                                android:paddingBottom="10dp"
                                android:text="@string/not"
                                android:textAlignment="center"
                                android:textSize="14sp" />

                    </TableRow>

                </TableLayout>

                <TextView
                        android:id="@+id/input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:background="#DADADA"
                        android:text="@string/input"
                        android:textSize="14sp" />

                <TextView
                        android:id="@+id/output"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:background="#DADADA"
                        android:text="@string/output"
                        android:textSize="14sp" />


                <RelativeLayout
                        android:id="@+id/buttonsAlignment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                    <Button
                            android:id="@+id/next"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:background="@color/colorPrimary"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="@color/white"
                            android:text="@string/btncontinue" />

                </RelativeLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </ScrollView>
</LinearLayout>