<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ActivityUserDefined">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/bottomBar"
            android:layout_alignParentBottom="true">

        <android.support.design.widget.BottomNavigationView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/bottomNavView_Bar"
                android:background="@color/lightgray"
                app:menu="@menu/bottom_navigation_menu">

        </android.support.design.widget.BottomNavigationView>
    </RelativeLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.v7.widget.CardView
                android:id="@+id/sub1"
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:layout_margin="10dp"
                android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/intro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="@string/intro"
                        android:textSize="14sp" />


                <TextView
                        android:id="@+id/input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:background="#DADADA"
                        android:text="@string/input"
                        android:textSize="14sp" />

                <TextView
                        android:id="@+id/remark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="@string/remark"
                        android:textSize="14sp" />

                <TextView
                        android:id="@+id/callFunction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:background="#DADADA"
                        android:text="@string/input"
                        android:textSize="14sp" />

                <TextView
                        android:id="@+id/simpleExample"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="@string/differences"
                        android:textColor="@color/difference"
                        android:textSize="15sp" />

                <TextView
                        android:id="@+id/input2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:background="#DADADA"
                        android:text="@string/input"
                        android:textSize="14sp" />

                <TextView
                        android:id="@+id/output2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:background="#DADADA"
                        android:text="@string/output"
                        android:textSize="14sp" />

                <TextView
                        android:id="@+id/parameterizeAndReturn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/input"
                        android:textColor="@color/difference"
                        android:textSize="14sp" />

                <TextView
                        android:id="@+id/pintro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="@string/intro"
                        android:textSize="14sp" />

                <TextView
                        android:id="@+id/input3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:background="#DADADA"
                        android:text="@string/input"
                        android:textSize="14sp" />

                <TextView
                        android:id="@+id/parameterize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/input"
                        android:textColor="@color/difference"
                        android:textSize="14sp" />


                <TextView
                        android:id="@+id/input4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:background="#DADADA"
                        android:text="@string/input"
                        android:textSize="14sp" />

                <TextView
                        android:id="@+id/output3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:background="#DADADA"
                        android:text="@string/output"
                        android:textSize="14sp" />



            </LinearLayout>
        </android.support.v7.widget.CardView>
    </ScrollView>
</LinearLayout>